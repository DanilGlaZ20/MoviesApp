@model MoviesApp.ViewModels.Actor.ActorViewModel
@using System.Linq
@{
ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Actor</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            <label asp-for="Name"></label>
        </dt>
        <dd class = "col-sm-10">
            @Model.Name
        </dd>
        <dt class = "col-sm-2">
            <label asp-for="Surname"></label>
        </dt>
        <dd class = "col-sm-10">
            @Model.Surname
        </dd>
        <dt class = "col-sm-2">
            <label asp-for="Birth"></label>
        </dt>
        <dd class="col-sm-10">
            @Model.Birth.ToString("dd.MM.yyyy")
        </dd>

    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.ID">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>